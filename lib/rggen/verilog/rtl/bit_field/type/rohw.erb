rggen_bit_field #(
  .WIDTH            (<%= width %>),
  .INITIAL_VALUE    (<%= initial_value %>),
  .SW_WRITE_ACTION  (`RGGEN_WRITE_NONE),
  .HW_ACCESS        (3'b001)
) u_bit_field (
  .i_clk              (<%= clock %>),
  .i_rst_n            (<%= reset %>),
  .i_sw_read_valid    (<%= bit_field_read_valid %>),
  .i_sw_write_valid   (<%= bit_field_write_valid %>),
  .i_sw_write_enable  (1'b1),
  .i_sw_mask          (<%= bit_field_mask %>),
  .i_sw_write_data    (<%= bit_field_write_data %>),
  .o_sw_read_data     (<%= bit_field_read_data %>),
  .o_sw_value         (<%= bit_field_value %>),
  .o_write_trigger    (),
  .o_read_trigger     (),
  .i_hw_write_enable  (<%= valid_signal %>),
  .i_hw_write_data    (<%= value_in[loop_variables] %>),
  .i_hw_set           (<%= fill_0(width) %>),
  .i_hw_clear         (<%= fill_0(width) %>),
  .i_value            (<%= fill_0(width) %>),
  .i_mask             (<%= fill_1(width) %>),
  .o_value            (<%= value_out[loop_variables] %>),
  .o_value_unmasked   ()
);
